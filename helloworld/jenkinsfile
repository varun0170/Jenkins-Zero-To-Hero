pipeline {

    agent {

         docker { image 'node:16-alpine' }
}

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/varun0170/Jenkins-Zero-To-Hero
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean compile'
                   }

        stage('Static Code Analysis') {
            steps {
                sh 'mvn checkstyle:check'
            }
        }

        
        stage('Functional Testing') {
            steps {
                echo 'Running functional tests...'
                // Insert actual functional testing commands here
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }

            }

    post {
        always {
            echo 'Cleaning up...'
            cleanWs()
        }
    }
}
